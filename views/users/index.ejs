<%- include('../partials/header') %>

<div class="row py-5 px-4">
    <div class="col-md-5 mx-auto">
       <!-- Begin user profile -->
        <div class="bg-white shadow rounded overflow-hidden">
            <div class="container bootdey">
                <div class="content-page">
                    <div class="profile-banner" style="background:url(http://beingcovers.com/media/facebook-cover/Beautiful-Beach-Sunset-facebook-covers-3661.jpg);" >
                        <div class="col-sm-3 avatar-container">
                            <img src="https://images.unsplash.com/photo-1473625247510-8ceb1760943f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1899&q=80" class="img-circle profile-avatar" alt="User avatar">
                        </div>
                        <div class="col-sm-12 profile-actions text-right">
                            <button type="button" class="btn btn-success btn-sm"><i class="fa fa-user-circle"></i> <%=user.name%></button>
                            <button type="button" class="btn btn-primary btn-sm"><i class="fa fa-map-marker"></i><%=user.city%> </button>
                        </div>
                    </div>
                    <div class="content">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="text-center user-profile-2" style="margin-top:120px">
                                    
                                        <!-- User button -->
                                    <div class="user-button">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <a href="/users/about"><button type="button" class="btn btn-primary btn-sm btn-block"><i class="fa fa-pencil-square-o "></i> Edit Your Profile</button></a>
                                            </div>
                                        </div>
                                    </div><!-- End div .user-button -->
                                </div><!-- End div .box-info -->
                            </div><!-- End div .col-sm-4 -->
                            
                            <div class="col-sm-9">
                                <div class="widget widget-tabbed">
                                    <!-- Nav tab -->
                                    <ul class="nav nav-tabs nav-justified">
                                      <li><a href="#about" data-toggle="tab"><i class="fa fa-user"></i> About</a></li>
                                      <li class="active"><a href="#my-timeline" data-toggle="tab"><i class="fa fa-comments"></i> Thoughts</a></li>
                                      <li><a href="#user-activities" data-toggle="tab"><i class="fa fa-users"></i> Contacts</a></li>
                                      <li><a href="#mymessage" data-toggle="tab"><i class="fa fa-envelope"></i> Message</a></li>
                                    </ul>
                                    <!-- End nav tab -->
                
                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                        
                                        <!-- Tab thoughts -->
                                        <div class="tab-pane animated active fadeInRight" id="my-timeline">
                                            <div class="user-profile-content">
                                                
                                                <!-- Begin thoughts -->
                                                <div class="the-timeline">
                                                    <form action="/users/comments" method="POST">
                                                        <textarea class="form-control" style="height: 70px;margin-bottom:10px;" placeholder="Penny for your thoughts..." name="content"></textarea>
                                                        <div class="row">
                                                        <div class="col-sm-6">
                                                            <a class="btn btn-sm btn-default"><i class="fa fa-camera"></i></a>
                                                            <a class="btn btn-sm btn-default"><i class="fa fa-video-camera"></i></a>
                                                            <a class="btn btn-sm btn-default"><i class="fa fa-map-marker"></i></a>
                                                        </div>
                                                        <div class="col-sm-6 text-right"><button type="submit" class="btn btn-primary">Post</button></div>
                                                        </div>
                                                    </form>
                                                    <br><br>
                            
                                                    <% user.comments.forEach(function(c) { %>

                                                    <form action="/users/<%= c.id %>?_method=DELETE" class="delete-form" id="delete-form" method="POST">
                                                        <button type="submit">X</button>
                                                    </form>
                                                    <h4><%= c.createdAt.toLocaleDateString() %></h4>
                                                    <p><%= c.content %> </p>
                                                                
                                                    <% }); %>

                                                        
                                                </div><!-- End div .the-thoughts -->
                         
                                            </div><!-- End div .user-profile-content -->
                                        </div><!-- End div .tab-pane -->
                                        <!-- End Tab thoughts-->
                                        
                                        <!-- Tab about -->
                                        <div class="tab-pane animated fadeInRight" id="about">
                                            <div class="user-profile-content">
                                        
                                                <h5><strong>ABOUT</strong> ME</h5>
                                                <p>
                                                    <%= user.about%>
                                                </p>
                                                <p><strong>Date of Birth:</strong><%= user.dob%></p>
                                                <p><strong>City:</strong><%= user.city%></p>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <h5><strong>CONTACT</strong> ME</h5>
                                                            <address>
                                                                <strong>Phone</strong><br>
                                                                <abbr title="Phone"><%= user.phoneNo%></abbr>
                                                            </address>
                                                            <address>
                                                                <strong>Email</strong><br>
                                                                <a href="mailto:#"><%= user.email%></a>
                                                            </address>
                                                            
                                                    </div>
                                                   
                                                    <div class="col-sm-6">
                                                        <h5><strong>MY</strong> Interests</h5>
                                                        <p><%= user.interests%></p>
                                                       
                                                    </div>
                                                 
                                                </div><!-- End div .row -->
                                            </div><!-- End div .user-profile-content -->
                                        </div><!-- End div .tab-pane -->
                                        <!-- End Tab about -->
                                        
                                        
                                        <!-- Tab contacts -->
                                        <div class="tab-pane animated fadeInRight" id="user-activities">
                                            <div class="scroll-user-widget">
                                                <ul class="media-list">
                                                    <li class="media">
                                                        <a href="#fakelink">
                                                        <p><strong>John Doe</strong> sent you a friend request
                                                        <br><i>2 minutes ago</i></p>
                                                        </a>
                                                    </li>
                                                    
                                                </ul>
                                            </div><!-- End div .scroll-user-widget -->
                                        </div><!-- End div .tab-pane -->
                                        <!-- End Tab contacts -->
                                        
                                        <!-- Tab user messages -->
                                        <div class="tab-pane animated fadeInRight" id="mymessage">
                                            <div class="scroll-user-widget">
                                                <ul class="media-list">
                                                  <li class="media">
                                                    <a class="pull-left" href="#fakelink">
                                                      <img class="media-object user-message" src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Avatar">
                                                    </a>
                                                    <div class="media-body">
                                                      <h4 class="media-heading"><a href="#fakelink">John Doe</a> <small>Just now</small></h4>
                                                      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
                                                    </div>
                                                  </li>
                                                  <li class="media">
                                                    <a class="pull-left" href="#fakelink">
                                                      <img class="media-object user-message" src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="Avatar">
                                                    </a>
                                                    <div class="media-body">
                                                      <h4 class="media-heading"><a href="#fakelink">Annisa</a> <small>Yesterday at 04:00 AM</small></h4>
                                                      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam rhoncus</p>
                                                    </div>
                                                  </li>
                                                  <li class="media">
                                                    <a class="pull-left" href="#fakelink">
                                                      <img class="media-object user-message" src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="Avatar">
                                                    </a>
                                                    <div class="media-body">
                                                      <h4 class="media-heading"><a href="#fakelink">Rusmanovski</a> <small>January 17, 2014 05:35 PM</small></h4>
                                                      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
                                                    </div>
                                                  </li>
                                                  
                                                </ul>
                                            </div><!-- End div .scroll-user-widget -->
                                        </div><!-- End div .tab-pane -->
                                        <!-- End Tab user messages -->
                                    </div><!-- End div .tab-content -->
                                </div><!-- End div .box-info -->
                            </div>
                        </div>
                    </div>	
                </div>
        
    </div>
</div>
            
  
</body>
</html>