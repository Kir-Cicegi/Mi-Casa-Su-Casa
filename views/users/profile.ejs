<%- include('../partials/header') %>

<!--end of nav-->
<div class="row py-5 px-4">
    <div class="col-md-5 mx-auto">
        <!-- Profile widget -->
        <div class="bg-white shadow rounded overflow-hidden">
           

            <!--end of profile pic -->

            <div class="container bootdey">
                <div class="content-page">
                    <div class="profile-banner" style="background:url(https://timelinecovers.pro/facebook-cover/download/hawaiian-beach-sunset-facebook-cover.jpg);" >
                        <div class="col-sm-3 avatar-container">
                            <img src="https://images.unsplash.com/photo-1530789253388-582c481c54b0?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" class="img-circle profile-avatar" alt="User avatar">
                        </div>
                        <div class="col-sm-12 profile-actions text-right">
                            <button type="button" class="btn btn-success btn-sm"><i class="fa fa-user-circle"></i> <%=user.name%></button>
                            <button type="button" class="btn btn-primary btn-sm"><i class="fa fa-map-marker"></i><%=user.city%> </button>
                        </div>
                    </div>
                    <div class="content">
                
                        <div class="row">
                            <div class="col-sm-3">
                                <!-- Begin user profile -->
                                <div class="text-center user-profile-2" style="margin-top:120px">
                                    
                                        <!-- User button -->
                                    <div class="user-button">
                                        <div class="row">
                                            
                                            <div class="col-lg-6">
                                                <button type="button" class="btn btn-primary btn-sm btn-block"><i class="fa fa-envelope"></i> Send Message</button>
                                            </div>
                                            <div class="col-lg-6">
                                                <button type="button" class="btn btn-default btn-sm btn-block"><i class="fa fa-user"></i> Add as friend</button>
                                            </div>
                                        </div>
                                    </div><!-- End div .user-button -->
                                </div><!-- End div .box-info -->
                                <!-- Begin user profile -->
                            </div><!-- End div .col-sm-4 -->
                            
                            <div class="col-sm-9">
                                <div class="widget widget-tabbed">
                                    <!-- Nav tab -->
                                    <ul class="nav nav-tabs nav-justified">

                                      <li><a href="#about" data-toggle="tab"><i class="fa fa-user"></i> About</a></li>
                                      <li class="active"><a href="#my-timeline" data-toggle="tab"><i class="fa fa-comments"></i> Comments</a></li>

                                      

                                      <li><a href="#user-activities" data-toggle="tab"><i class="fa fa-users"></i> Contacts</a></li>
                                      
                                    </ul>
                                    <!-- End nav tab -->
                
                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                        
                                        
                                        <!-- Tab timeline -->
                                        <div class="tab-pane animated active fadeInRight" id="my-timeline">
                                            <div class="user-profile-content">
                                                
                                                <!-- Begin timeline -->
                                                <div class="the-timeline">
                                                    <form action="/users/<%=user.id%>/comments" method="POST">
                                                        <textarea class="form-control" style="height: 70px;margin-bottom:10px;" placeholder="Add your comment here..." name="content"></textarea>
                                                        <div class="row">
                                                        <div class="col-sm-6">
                                                            <a class="btn btn-sm btn-default"><i class="fa fa-camera"></i></a>
                                                            <a class="btn btn-sm btn-default"><i class="fa fa-video-camera"></i></a>
                                                            <a class="btn btn-sm btn-default"><i class="fa fa-map-marker"></i></a>
                                                        </div>
                                                        <div class="col-sm-6 text-right"><button type="submit" class="btn btn-primary">Post</button></div>
                                                        </div>
                                                    </form>
                                                    <br><br>
                                                 
                                                
                                                            <% user.comments.forEach(function(c) { %>

                                    <!--I am currently working on delete function for the comments -->
                                                                <!-- <form action="/users/:id/comments/:id?_method=DELETE" class="delete-form"
                                                                    id="delete-form" method="POST">
                                                                    <button type="submit">X</button>
                                                                </form> -->
                                                                <h4><%= c.createdAt.toLocaleDateString() %></h4>
                                                         
                                                                <p>
                                                                    <%= c.content %> 
                                                                </p>
                                                                
                                                                <% }); %>

                                                       
                                                          
                                                   
                                                      
                                                  
                                                </div><!-- End div .the-timeline -->
                                                <!-- End timeline -->
                                            </div><!-- End div .user-profile-content -->
                                        </div><!-- End div .tab-pane -->
                                        <!-- End Tab timeline -->
                                        
                                        <!-- Tab about -->
                                        <div class="tab-pane animated fadeInRight" id="about">
                                            <div class="user-profile-content">
                                        
                                                <h5><strong>ABOUT</strong> ME</h5>
                                                <p>
                                                    <%= user.about%>
                                                </p>
                                                <p><strong>Date of Birth:</strong><%= user.dob%></p>
                                                <p><strong>City:</strong><%= user.city%></p>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <h5><strong>CONTACT</strong> ME</h5>
                                                            <address>
                                                                <strong>Phone</strong><br>
                                                                <abbr title="Phone"><%= user.phoneNo%></abbr>
                                                            </address>
                                                            <address>
                                                                <strong>Email</strong><br>
                                                                <a href="mailto:#"><%= user.email%></a>
                                                            </address>
                                                            
                                                    </div>
                                                   
                                                    <div class="col-sm-6">
                                                        <h5><strong>MY</strong> Interests</h5>
                                                        <p><%= user.interests%></p>
                                                       
                                                    </div>
                                                 
                                                </div><!-- End div .row -->
                                            </div><!-- End div .user-profile-content -->
                                        </div><!-- End div .tab-pane -->
                                        <!-- End Tab about -->
                                        
                                        
                                        <!-- Tab user activities -->
                                        <div class="tab-pane animated fadeInRight" id="user-activities">
                                            <div class="scroll-user-widget">
                                                <ul class="media-list">
                                                    <li class="media">
                                                        <a href="#fakelink">
                                                        <p><strong>John Doe</strong> sent you a friend request
                                                        <br><i>2 minutes ago</i></p>
                                                        </a>
                                                    </li>
                                                    
                                                </ul>
                                            </div><!-- End div .scroll-user-widget -->
                                        </div><!-- End div .tab-pane -->
                                        <!-- End Tab user activities -->
                                        
                                       
                                        <!-- End Tab user messages -->
                                    </div><!-- End div .tab-content -->
                                </div><!-- End div .box-info -->
                            </div>
                        </div>
                    </div>	
                </div>
        
    </div>
</div>
            

        
          
                





    
  
</body>
</html>